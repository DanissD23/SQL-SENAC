FROM tbl_livros
WHERE IdAssunto = 3;

SELECT DataPub
FROM tbl_livros
WHERE NomeLivro = 'Using Samba';

SELECT PrecoLivro
FROM tbl_livros
WHERE NomeLivro = 'SSH, o Shell Seguro';

