--Ordenação de resultados em consultas
-- Cláusula ORDER BY
SELECT NomeEditora
FROM tbl_editoras
ORDER BY NomeEditora;


SELECT * FROM tbl_livros
ORDER BY PrecoLivro;

SELECT NomeLivro, Precolivro, NumeroPaginas
FROM tbl_livros
ORDER BY NumeroPaginas DESC; --DESC= Comando para ordem descendente

